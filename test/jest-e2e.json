{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../src/$1",
    "@entities/(.*)$": "<rootDir>/../src/common/entities/$1",
    "@constants/(.*)$": "<rootDir>/../src/common/constants/$1",
    "@utils/(.*)$": "<rootDir>/../src/common/utils/$1"
  }
}